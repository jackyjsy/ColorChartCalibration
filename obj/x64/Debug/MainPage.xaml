<Page
    x:Class="CameraManualControls.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CameraManualControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="TranslucentBlackBrush" Color="Black" Opacity="0.3"/>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource TranslucentBlackBrush}"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <local:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <local:RoundingConverter x:Key="RoundingConverter"/>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <!--Camera preview-->
        <CaptureElement x:ConnectionId='1' Name="PreviewControl" Stretch="Uniform" ManipulationMode="Scale"
                                                                                                           />

        <Canvas x:ConnectionId='2' Name="FocusCanvas">
            <Rectangle x:ConnectionId='48' Name="FocusRectangle" Stroke="White" StrokeThickness="2" Visibility="Collapsed"/>
        </Canvas>

        <!-- Capture + Record buttons -->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                    <Setter Property="MinWidth" Value="80"/>
                    <Setter Property="MinHeight" Value="80"/>
                </Style>
            </StackPanel.Resources>

            <Button x:ConnectionId='44' Name="PhotoButton"                           IsEnabled="False">
                <Viewbox MaxHeight="40" MaxWidth="40">
                    <SymbolIcon Symbol="Camera"/>
                </Viewbox>
            </Button>

            <Button x:ConnectionId='45' Name="VideoButton"                           IsEnabled="False">
                <Grid>
                    <Ellipse x:ConnectionId='46' x:Name="StartRecordingIcon" Fill="Red" Width="20" Height="20"/>
                    <Rectangle x:ConnectionId='47' x:Name="StopRecordingIcon" Fill="White" Width="20" Height="20" Visibility="Collapsed"/>
                </Grid>
            </Button>
        </StackPanel>

        <!--Manual controls-->
        <Grid x:ConnectionId='3' Visibility="Collapsed" Name="CameraControlsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Stack panel containing the buttons for each control scenario-->
            <StackPanel x:ConnectionId='7' Name="ScenarioControlStackPanel" Grid.Row="0" HorizontalAlignment="Left" MinWidth="88">
                    <StackPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                            <Setter Property="Margin" Value="10,7"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>
                    </StackPanel.Resources>
                    <StackPanel.ChildrenTransitions>
                        <TransitionCollection>
                            <AddDeleteThemeTransition/>
                        </TransitionCollection>
                    </StackPanel.ChildrenTransitions>

                    <Button x:ConnectionId='37' Name="FlashButton" Content="Flash"                                  />
                    <Button x:ConnectionId='38' Name="ZoomButton" Content="Zoom"                                  />
                    <Button x:ConnectionId='39' Name="FocusButton" Content="Focus"                                  />
                    <Button x:ConnectionId='40' Name="WbButton" Content="WB"                                  />
                    <Button x:ConnectionId='41' Name="IsoButton" Content="ISO"                                  />
                    <Button x:ConnectionId='42' Name="ShutterButton" Content="Shutter"                                  />
                    <Button x:ConnectionId='43' Name="EvButton" Content="EV"                                  />
                </StackPanel>

            <!--Grid that hosts all of the manual controls for the selected camera control-->
            <Grid x:ConnectionId='8' Name="ManualControlsGrid" Grid.Row="1" HorizontalAlignment="Left"  Background="{StaticResource TranslucentBlackBrush}" Margin="10" Visibility="Collapsed">

                <StackPanel x:ConnectionId='9' Name="FlashStackPanel" HorizontalAlignment="Center" Margin="10" Visibility="{Binding ElementName=FlashButton,Path=Visibility}">
                    <RadioButton x:ConnectionId='32' Name="FlashOnRadioButton" Content="On"                                     />
                    <RadioButton x:ConnectionId='33' Name="FlashAutoRadioButton" Content="Auto"                                       />
                    <RadioButton x:ConnectionId='34' Name="FlashOffRadioButton" Content="Off"                                      />
                    <CheckBox x:ConnectionId='35' Name="RedEyeFlashCheckBox" Content="Red Eye" Visibility="Collapsed"                                                                                            />
                    <CheckBox x:ConnectionId='36' Name="TorchCheckBox" Content="Video Light" Visibility="Collapsed"                                                                                />
                </StackPanel>

                <Grid x:ConnectionId='10' Name="ZoomGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding ElementName=ZoomButton,Path=Visibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:ConnectionId='31' Name="ZoomSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch"                                       />
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="{Binding ElementName=ZoomSlider,Path=Value,Converter={StaticResource RoundingConverter}}"/>
                </Grid>

                <Grid x:ConnectionId='11' Name="FocusGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding ElementName=FocusButton,Path=Visibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:ConnectionId='26' Name="FocusSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                            IsEnabled="{Binding ElementName=ManualFocusRadioButton,Path=IsChecked}"                                        />
                    <TextBlock Text="{Binding ElementName=FocusSlider,Path=Value,FallbackValue='0'}" Grid.Row="1" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Row="2">
                        <RadioButton x:ConnectionId='27' Content="Manual" Name="ManualFocusRadioButton"                                          IsChecked="True"/>
                        <RadioButton x:ConnectionId='28' Content="CAF" Name="CafFocusRadioButton"                                      />
                        <RadioButton x:ConnectionId='29' Content="Tap" Name="TapFocusRadioButton"                                      />
                        <CheckBox x:ConnectionId='30' Content="Assist Light" Name="FocusLightCheckBox" IsEnabled="{Binding ElementName=TapFocusRadioButton,Path=IsChecked}"
                                                                                                                           />
                    </StackPanel>
                </Grid>

                <Grid x:ConnectionId='12' Name="WbStackPanel" HorizontalAlignment="Center" Margin="10" Visibility="{Binding ElementName=WbButton,Path=Visibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:ConnectionId='23' Name="WbSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch"                                     />
                    <TextBlock x:ConnectionId='24' Name="WbTextBox" Grid.Row="1" HorizontalAlignment="Center" Text="{Binding ElementName=WbSlider,Path=Value}"/>
                    <ComboBox x:ConnectionId='25' Name="WbComboBox" Grid.Row="2"                                               />
                </Grid>

                <Grid x:ConnectionId='13' Name="IsoGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding ElementName=IsoButton,Path=Visibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:ConnectionId='21' Name="IsoSlider" Grid.Row="0" IsEnabled="{Binding ElementName=IsoAutoCheckBox,Path=IsChecked,Converter={StaticResource InvertBoolConverter}}"
                            Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch"                                      />
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="{Binding ElementName=IsoSlider,Path=Value}"/>
                    <CheckBox x:ConnectionId='22' Name="IsoAutoCheckBox" Grid.Row="2" Content="Auto"                                                                                    />
                </Grid>

                <Grid x:ConnectionId='14' Name="ShutterGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding ElementName=ShutterButton,Path=Visibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:ConnectionId='18' Name="ShutterSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch"                                           
                            IsEnabled="{Binding ElementName=ShutterAutoCheckBox,Path=IsChecked,Converter={StaticResource InvertBoolConverter}}"/>
                    <TextBlock x:ConnectionId='19' Name="ShutterTextBlock" Grid.Row="1" HorizontalAlignment="Center" Text="0"/>
                    <CheckBox x:ConnectionId='20' Name="ShutterAutoCheckBox" Grid.Row="2" Content="Auto"                                                                                    />
                </Grid>

                <Grid x:ConnectionId='15' Name="EvGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding ElementName=EvButton,Path=Visibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:ConnectionId='16' Name="EvSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch"                                     />
                    <TextBlock x:ConnectionId='17' Name="EvTextBlock" Grid.Row="1" HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>
        <CheckBox x:ConnectionId='4' Name="StartCheckBox" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Start"                                                                                />
        <Image x:ConnectionId='5' x:Name="image" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Rectangle x:ConnectionId='6' Name="ColorChartRectangle" HorizontalAlignment="Center" Height="225" Stroke="Black" VerticalAlignment="Center" Width="325" Visibility="Collapsed"/>
    </Grid>

</Page>

